{% extends "base.njk" %}
{% block contenido %}
    <h1>Inserción de nueva habitación</h1>
    {% if errores.general %}
        <p class="alert alert-danger">{{ errores.general }}</p>
    {% endif %}
    <form action="/habitaciones/{{habitacion.id}}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="numero">Numero habitación:</label>
            {% if errores.numero %}
                <p class="text-danger">{{ errores.numero }}</p>
            {% endif %}
            <input type="number" class="form-control" name="numero" placeholder="Numero de la habitación..." value="{{ habitacion.numero }}" min="0" max="100">
        </div>
        
        <div class="form-group">
            <label for="tipo">Tipo de habitación:</label>
            <select name="tipo" id="tipo">
                <option value="individual">individual</option>
                <option value="doble">doble</option>
                <option value="familiar">familiar</option>
                <option value="suite">suite</option>
            </select>
        </div>
        
        <div class="form-group">
            <label for="descripcion">Descripcion:</label>
            {% if errores.descripcion %}
                <p class="text-danger">{{ errores.descripcion }}</p>
            {% endif %}
            <textarea type="text" class="form-control" name="descripcion" placeholder="Descripcion de la habitacion...">{{ habitacion.descripcion }}</textarea>
        </div>

        <div class="form-group">
            <label for="foto">Foto habitacion:</label>
            <input type="file" class="form-control" name="foto" placeholder="Foto de la habitación..."/>
        </div>

        <div class="form-group">
            <label for="precio">Precio habitación:</label>
            {% if errores.precio %}
                <p class="text-danger">{{ errores.precio }}</p>
            {% endif %}
            <input type="number" class="form-control" name="precio" placeholder="Precio de la habitación..." value="{{ habitacion.precio }}">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar</button>
        </div>
    </form>
{% endblock %}
